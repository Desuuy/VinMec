
@{
    ViewData["Title"] = "danh sách bác sĩ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Article.css" asp-append-version="true">

<div id="loginForm">
    <div class="cover_list_news" id="slide-scroll">
        <div class="name_cate_cover animcc">Danh sách bác sĩ</div>
        <img src="~/images/bg_article.jpg" alt="Cấp cứu">
    </div>
</div>

<div class="container">
    <div class="bread-flow">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="FillterDoctor">Tìm bác sĩ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách bác sĩ</li>
            </ol>
        </nav>
    </div>

        <!-- Doctor List Section -->
    <div class="row title-content">
        <h2 style="margin:0 0 30px 50px; font-size: 25px;">Danh sách bác sĩ</h2>
        @{
            int count = (int)ViewBag.ListDocFill.Count;
        }
        @if(count == 0 ){
            <h3 style="text-align: center; font-weight: bold;">
                Rất tiếc! Chúng tôi không Tìm thấy bác sĩ
            </h3>
        }
        
        @foreach( var a in ViewBag.ListDocFill){
            @if(a[8] == "3"){
                <div class="col-md-6 col-lg-6">
                    <div class="doctor-card p-3">
                        <div class="d-img">
                            <a href="~/Home/DetailDoctor?MaBS=@int.Parse(a[0])">
                                <img src="~/images/ic_avatar.png"  class="doctor-img me-3">
                            </a>
                            <a class="btn btn-primary btn-subex" href="@Url.Action("BookExamine", "Home", new { MaBS = a[0] })">Đăng ký khám</a>
                        </div>

                        <div class="content-doctor" >
                            <a href="~/Home/DetailDoctor?MaBS=@int.Parse(a[0])">
                                <h5 class="text-primary">@a[2]</h5>
                            </a>
                            <p>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="22" viewBox="0 0 24 22" fill="none">
